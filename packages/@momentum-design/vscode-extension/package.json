{
  "name": "@momentum-design/vscode-extension",
  "displayName": "@momentum-design/vscode-extension",
  "description": "VS Code Extension for Momentum",
  "packageManager": "yarn@3.2.4",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:momentum.start"
  ],
  "main": "./dist/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "momentum.start",
        "title": "Momentum Design",
        "category": "Momentum Design"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "build:ui": "vite build",
    "build:ext": "tsc -p tsconfig.extension.json",
    "build:ext:esbuild": "node ./scripts/build.mjs",
    "build": "yarn run clean && yarn run build:ui && yarn run build:ext:esbuild",
    "preview:ui": "yarn run clean && mkdir dist && concurrently \"yarn run build:ui --watch\" \"vite preview\"",
    "clean": "yarn clean:dist",
    "clean:dist": "rimraf ./dist/",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@rollup/plugin-dynamic-import-vars": "^2.1.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.3.3",
    "vite": "^5.2.10",
    "vite-plugin-dynamic-import": "^1.5.0",
    "vite-plugin-svgr": "^4.2.0"
  },
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.5.3",
    "@momentum-design/animations": "workspace:^",
    "@momentum-design/brand-visuals": "workspace:^",
    "@momentum-design/icons": "workspace:^",
    "@momentum-design/illustrations": "workspace:^",
    "@momentum-ui/react-collaboration": "^26.120.1",
    "@octokit/rest": "^21.0.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
