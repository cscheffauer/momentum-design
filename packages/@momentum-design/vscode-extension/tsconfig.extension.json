{
	"extends": "../../../config/typescript/tsconfig.base.json",
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"rootDir": "ext-src",
		"downlevelIteration": true,
		"checkJs": false,
		"allowJs": true, 
		"skipLibCheck": true,  
		"moduleResolution": "node",  
		"esModuleInterop": true,  
	},
	"include": [
		"ext-src/**/*"
	],
	"exclude": [
        "node_modules",
        ".vscode-test"
    ]
}