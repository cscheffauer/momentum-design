{
  "extends": "../../../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "outDir": "./dist/"
  },
  "plugins": [],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
} 
